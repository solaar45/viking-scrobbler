<?xml version="1.0"?>
<Container version="2">
  <Name>viking-scrobbler</Name>
  <Repository>solaar45/viking-scrobbler:latest</Repository>
  <Network>bridge</Network>
  <Overview>Viking Scrobbler - Music scrobbling (auto-generates secrets)</Overview>
  <Category>Music: Tools:</Category>
  <WebUI>http://[IP]:[PORT:4000]/</WebUI>
  <Icon>https://raw.githubusercontent.com/elixir-lang/elixir-lang.github.com/master/images/logo/logo.png</Icon>
  <Config Name="WebUI Port" Target="4000" Default="4000" Mode="tcp" Type="Port" Display="always" Required="true">4000</Config>
  <Config Name="Data Directory" Target="/app/data" Default="/mnt/user/appdata/viking/data" Mode="rw" Description="Database and auto-generated secrets" Type="Path" Display="always" Required="true">/mnt/user/appdata/viking/data</Config>
  <Config Name="MIX_ENV" Target="MIX_ENV" Default="prod" Type="Variable" Display="advanced" Required="false">prod</Config>
  <Config Name="DATABASE_PATH" Target="DATABASE_PATH" Default="/app/data/app_api.db" Type="Variable" Display="advanced" Required="false">/app/data/app_api.db</Config>
</Container>
